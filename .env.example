# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/monitor_bot

# Twitter API配置
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Solana配置 - 多节点数组配置
SOLANA_RPC_MAINNET_URLS=https://api.mainnet-beta.solana.com,https://backup-node.com
SOLANA_RPC_DEVNET_URLS=https://api.devnet.solana.com
SOLANA_RPC_TESTNET_URLS=https://api.testnet.solana.com
SOLANA_DEFAULT_NETWORK=mainnet

# Solana DEX 监控配置

# 原生SOL代币转账监控金额
SOL_TRANSFER_AMOUNT=0.01
# 代币代币转账监控金额
TOKEN_TRANSFER_AMOUNT=0.01
# DEX交易监控金额
DEX_SWAP_AMOUNT=0.01
# DEX添加流动性监控金额
DEX_ADD_LIQUIDITY_AMOUNT=0.01
# DEX移除流动性监控金额
DEX_REMOVE_LIQUIDITY_AMOUNT=0.01

# RPC配置参数
SOLANA_RPC_TIMEOUT=30
SOLANA_RPC_MAX_RETRIES=3
SOLANA_RPC_HEALTH_CHECK_INTERVAL=300

# 企业微信配置
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key_here

# 监控插件配置
ENABLED_MONITORS=twitter,solana

# 插件检查间隔
TWITTER_CHECK_INTERVAL=60
SOLANA_CHECK_INTERVAL=30

# 通用监控配置
MONITOR_STARTUP_DELAY=10
MONITOR_GRACEFUL_SHUTDOWN_TIMEOUT=30

# 安全配置已移除 - 当前监控机器人不需要SECRET_KEY

# 应用配置
DEBUG=False
LOG_LEVEL=INFO